                      <form name="deleteAccount" action="/users/userDelete?_method=DELETE" method="post">
                    <div
                        class="settings-main-delete-content-input input-delete"
                      >
                        <label for="email">Email:</label>
                        <input 
                        type="text" name="email" id="email" required/>
                      </div>
                      <div
                      class="settings-main-delete-content-input input-delete"
                    >
                      <label for="password">Password:</label>
                      <input 
                      type="password" name="password" id="password" required/>
                      <p class="invalidInput invalidDeleteAccountPassword hidden "><i class="fas fa-exclamation-triangle"></i> Invalid Password/Email</p>
